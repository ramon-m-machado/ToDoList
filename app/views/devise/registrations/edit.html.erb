<div class="center w3-content forms-modificados" style="max-width:450px;"  >
  <h1>Editar Usuario</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.label :email, 'Email' %><br />
  <div class="inputbox"> 
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="inputbox"> Atualmente esperando a confirmação por: <%= resource.unconfirmed_email %></div>
  <% end %>

<%= f.label :password, 'Senha' %> <i>(deixe em branco para não mudá-la)</i><br />
  <div class="inputbox"> 
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caracteres no mínimo</em>
    <% end %>
  </div>

    <%= f.label :password_confirmation, 'Confirmação de senha' %><br />
  <div class="inputbox">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

<%= f.label :current_password, 'Senha atual' %> <i>(precisamos da sua senha atual para confirmar as mudanças)</i><br />
  <div class="inputbox">
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="inputbox">
    <%= f.submit 'Enviar', :class => 'w3-bar-item w3-button btn btn-primary botoes_iniciais'%>
  </div>
<% end %>
</div>


<div class="w3-center w3-content" style="max-width:450px;">
  <%= link_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"w3-bar-item w3-button btn btn-primary botoes-baixo-form" %> 
  <%= link_to "Voltar", lists_path, class:"w3-bar-item w3-button btn btn-primary botoes-baixo-form" %>
</div>
